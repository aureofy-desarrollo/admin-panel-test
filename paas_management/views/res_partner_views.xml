<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_paas" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.paas</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_paas_user"
                        icon="fa-user" invisible="paas_user_count == 0">
                    <field string="PaaS User" name="paas_user_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
