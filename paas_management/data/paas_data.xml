<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <!-- Test Contacts -->
    <record id="partner_juan_perez" model="res.partner">
        <field name="name">Juan PÃ©rez</field>
        <field name="email">juan.perez@example.com</field>
    </record>

    <record id="partner_juana_velasco" model="res.partner">
        <field name="name">Juana Velasco</field>
        <field name="email">juana.velasco@example.com</field>
    </record>

    <!-- Action -->
    <record id="action_paas_instance" model="ir.actions.act_window">
        <field name="name">PaaS Instances</field>
        <field name="res_model">paas.instance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_paas_root" name="PaaS Management" sequence="10"/>
    <menuitem id="menu_paas_instance" name="Instances" parent="menu_paas_root" action="action_paas_instance" sequence="10"/>

    <!-- List View -->
    <record id="view_paas_instance_list" model="ir.ui.view">
        <field name="name">paas.instance.list</field>
        <field name="model">paas.instance</field>
        <field name="arch" type="xml">
            <list string="PaaS Instances">
                <field name="paas_id"/>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="state" widget="badge" decoration-success="state == 'running'" decoration-info="state == 'provisioning'"/>
                <field name="odoo_version"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_paas_instance_form" model="ir.ui.view">
        <field name="name">paas.instance.form</field>
        <field name="model">paas.instance</field>
        <field name="arch" type="xml">
            <form string="PaaS Instance">
                <header>
                    <button name="action_sync_paas" string="Sync" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="odoo_version"/>
                        <field name="paas_id"/>
                        <field name="url" widget="url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</data>
</odoo>
